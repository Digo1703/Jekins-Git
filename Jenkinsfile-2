pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
                echo "Build number is ${currentBuild.number}"
                echo "Build name is ${currentBuild.displayName}"
            }
            post {
                success{
                    script{
                        currentBuild.result = 'FAILURE'
                    }
                }
            }
        }
    }
    post {
        always{
            currentBuild.currentResult
        }
    }
}
